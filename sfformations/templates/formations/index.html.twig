{% extends 'base.html.twig' %}

{% block title %}Formations index{% endblock %}

{% block body %}
    <h1>Formations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>Description</th>
                <th>Duree</th>
                <th>Niveau</th>
                <th>Lieu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.resume }}</td>
                <td>{{ formation.description }}</td>
                <td>{{ formation.duree }}</td>
                <td>{{ formation.niveau }}</td>
                <td>{{ formation.lieu }}</td>
                <td>
                    <a href="{{ path('app_formations_show', {'id': formation.id}) }}">show</a>
                    <a href="{{ path('app_formations_edit', {'id': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formations_new') }}">Create new</a>
{% endblock %}
